<% end %>

<% if @listings %>
    % listings
    \usepackage{listings}         % permet d'inserer du code (multi-langage)
    \usepackage{courier}
    \usepackage{caption}
<% end %>

<% if @fancyhdr %>
    % fancyhdr
    \usepackage{lastpage}         % derniere page
    \usepackage{fancyhdr}         % en-tete et pied de page
<% end %>

